#include <iostream>
#include <string>
using namespace std;

class
class Person {
protected:
    string name;
    int age;

public:
    
    void inputPerson() {
        cout << "Enter name: ";
        getline(cin, name);
        cout << "Enter age: ";
        cin >> age;
        cin.ignore(); 
    }

    
    void display() {
        cout << "\nName: " << name << endl;
        cout << "Age: " << age << endl;
    }
};


class Student : public Person {
private:
    int roll_number;

public:
    
    void inputStudent() {
        cout << "Enter roll number: ";
        cin >> roll_number;
        cin.ignore(); 
    }

    
    void showDetails() {
        display(); 
        cout << "Roll Number: " << roll_number << endl;
    }
};

int main() {
    Student s1;

    cout << "Enter person details:\n";
    s1.inputPerson();

    cout << "\nEnter student details:\n";
    s1.inputStudent();

    cout << "\n--- Displaying Student Details ---" << endl;
    s1.showDetails(); 

    return 0;
}
