#include <iostream>
#include <string>
using namespace std;

class TelephoneBill {
private:
    string Name;
    string Address;
    string TelNo;
    int NoOfCalls;

public:
    
    void inputData() {
        cout << "Enter Name: ";
        getline(cin, Name);
        cout << "Enter Address: ";
        getline(cin, Address);
        cout << "Enter Telephone Number: ";
        getline(cin, TelNo);
        cout << "Enter Number of Calls: ";
        cin >> NoOfCalls;
    }

    
    friend void calculateBill(TelephoneBill t);
};

void calculateBill(TelephoneBill t) {
    const int chargePerCall = 2; 
    int totalAmount = t.NoOfCalls * chargePerCall;

    cout << "\n--- Telephone Bill ---" << endl;
    cout << "Name: " << t.Name << endl;
    cout << "Address: " << t.Address << endl;
    cout << "Telephone No.: " << t.TelNo << endl;
    cout << "Number of Calls: " << t.NoOfCalls << endl;
    cout << "Amount to be Paid: Rs. " << totalAmount << endl;
}

int main() {
    TelephoneBill t1;

    t1.inputData();
    calculateBill(t1);

    return 0;
}
