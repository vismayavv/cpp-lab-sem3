#include <iostream>
using namespace std;

class Matrix {
private:
    int mat[2][2]; 

public:
  
    void input() {
        cout << "Enter 4 elements of 2x2 matrix:\n";
        for (int i = 0; i < 2; i++) {
            for (int j = 0; j < 2; j++) {
                cin >> mat[i][j];
            }
        }
    }

    // Function to display matrix
    void display() {
        for (int i = 0; i < 2; i++) {
            for (int j = 0; j < 2; j++) {
                cout << mat[i][j] << " ";
            }
            cout << endl;
        }
    }

    
    Matrix operator+(Matrix m) {
        Matrix temp;
        for (int i = 0; i < 2; i++) {
            for (int j = 0; j < 2; j++) {
                temp.mat[i][j] = mat[i][j] + m.mat[i][j];
            }
        }
        return temp;
    }
};

int main() {
    Matrix m1, m2, sum;

    cout << "Enter elements for Matrix 1:\n";
    m1.input();

    cout << "\nEnter elements for Matrix 2:\n";
    m2.input();

    sum = m1 + m2; 

    cout << "\nMatrix 1:\n";
    m1.display();

    cout << "\nMatrix 2:\n";
    m2.display();

    cout << "\nSum of Matrices:\n";
    sum.display();

    return 0;
}
